<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <Target>System.out</Target>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>[%d{yyyy/MM/dd HH:mm:ss:SSS}] %X{ipaddr} %X{sessionId} &lt;%-5level&gt; - %m \(%F:%L\)%n</pattern>
    </encoder>
  </appender>
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/lunch.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <FileNamePattern>lunch-%i.log</FileNamePattern>
      <MinIndex>1</MinIndex>
      <MaxIndex>5</MaxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>10MB</MaxFileSize>
    </triggeringPolicy>
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>[%d{yyyy/MM/dd HH:mm:ss:SSS}] %X{ipaddr} %X{sessionId} &lt;%-5level&gt; - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="jp.dip.komusubi">
    <level value="info" />
  </logger>
  <logger name="jdbc.sqltiming">
    <level value="info" />
  </logger>
  <logger name="jdbc.sqlonly">
    <level value="warn" />
  </logger>
  <logger name="jdbc.audit">
    <level value="warn" />
  </logger>
  <logger name="jdbc.resultset">
    <level value="warn" />
  </logger>
  <logger name="jdbc.connection">
    <level value="warn" />
  </logger>
  <root>
    <level value="info" />
    <appender-ref ref="file" />
  </root>
</configuration>
