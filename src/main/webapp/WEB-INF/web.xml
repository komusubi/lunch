<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">

  <display-name>lunch</display-name>
  <filter>
    <filter-name>guice.filter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>guice.filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>jp.dip.komusubi.lunch.Bootstrap</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <description>smtp</description>
    <param-name>smtp.user</param-name>
    <param-value>null</param-value>
  </context-param>
  <context-param>
    <description>smtp</description>
    <param-name>smtp.password</param-name>
    <param-value>null</param-value>
  </context-param>
  <context-param>
    <description>smtp</description>
    <param-name>smtp.host</param-name>
    <param-value>smtp.gmail.com</param-value>
  </context-param>
  <context-param>
    <description>smtp</description>
    <param-name>smtp.port</param-name>
    <!-- another non ssl port 465 -->
    <param-value>587</param-value>
  </context-param>
  <!-- jdbc parameters -->
  <context-param>
    <description>jdbc</description>
    <param-name>jdbc.url</param-name>
    <param-value>jdbc:log4jdbc:mysql://localhost:3306/develop</param-value>
  </context-param>
  <context-param>
    <description>jdbc</description>
    <param-name>database.user</param-name>
    <param-value>null</param-value>
  </context-param>
  <context-param>
    <description>jdbc</description>
    <param-name>database.password</param-name>
    <param-value>null</param-value>
  </context-param>
</web-app>
